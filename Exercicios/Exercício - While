#include <stdio.h>

int main() {
    int num;


    num = 1;
    printf("\n\tImprimir os números de 1 até 50:\n");
    while (num <= 50) {
        printf(" %d\n", num);
        num++;
    }


    printf("\n\tImprimir os números de 50 até 1:\n");
    num = 50;
    while (num >= 1) {
        printf(" %d\n", num);
        num--;
    }


    int start;
    printf("\nDigite um número inicial: ");
    scanf("%d", &start);
    printf("\nImprimir os números de %d até 0:\n", start);
    while (start >= 0) {
        printf(" %d\n", start);
        start--;
    }

    return 0;
}
